<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@null">

    <TextView
        android:id="@+id/find_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="findtitle"
        android:textAppearance="@style/notice_title" />

    <android.support.v7.widget.RecyclerView
        tools:listitem="@layout/recyclerview_item_find_affiliation"
        android:id="@+id/recyclerview_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/find_title">


    </android.support.v7.widget.RecyclerView>

</RelativeLayout>