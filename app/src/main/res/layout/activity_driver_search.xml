<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/busbus"
        android:text="소속을 선택해 주세요"
        android:textColor="@color/mainblue"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/busbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/bus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_aff"
        android:layout_toLeftOf="@+id/edit_aff"
        android:text="소속"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/edit_aff"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="검색할 소속명 입력"
        android:inputType="text"
        android:lines="1"
        android:maxLength="15"
        android:maxLines="1" />

    <ImageButton
        android:id="@+id/aff_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_above="@+id/back1"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@+id/edit_aff"
        android:src="@drawable/search" />


    <Button
        android:id="@+id/request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back1"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:text="확인"
        android:textColor="@color/mainblue"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/back1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/rectangle1" />


</RelativeLayout>